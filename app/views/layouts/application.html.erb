<!DOCTYPE html>
<html>
  <head>
    <title>Library</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
     
   <nav class="navbar navbar-expand-lg navbar-light bg-light">
     
  
  <%= link_to 'Home', books_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav mr-auto signupbtn ">
     
     <%= link_to 'All Books', books_path, class: "nav-item nav-link" %>
      <%= link_to 'Add Book', new_book_path, class: "nav-item nav-link" %>
      <%= link_to 'All Authors', authors_path, class: "nav-item nav-link" %>
      <%= link_to 'Add Author', new_author_path, class: "nav-item nav-link" %>
      
    </div>
    <div class = "signupbtn">
    <% if current_user %>
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
    <% else %>
    <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-primary" %>
    <%= link_to 'Sign In', new_user_session_path, class: "btn btn-primary" %>
    <% end %>
    
    
    </div>
  </div>
</nav>

   <% if not @messages_rendered -%>
  <% if flash[:alert] -%>
    <<div class="alert alert-warning" role="alert"><p class='alert'><%=h flash[:alert] %></p>
  
    </div>
  <% end -%>
  <% if flash[:notice] -%>
    <div class="alert alert-info" role="alert"><p class='notice'><%=h flash[:notice] %></p>
   
    </div>
  <% end -%>
  
<% end -%>
<% @messages_rendered = true -%>
    <%= yield %>
  </body>
</html>
